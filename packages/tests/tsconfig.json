{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "types": ["jest", "node"]
  },
  "exclude": [
    "node_modules",
    "../common/build",
    "../api/node_modules"
  ],
  "include": [
    "src/*.test.ts" //, "../projects/src/**/tests/*.test.ts",
  ],
}
